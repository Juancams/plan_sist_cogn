set instance small_bedroom room
set instance storage room

set instance corridor room

set instance ball object

set predicate (connected salon corridor)
set predicate (connected corridor salon)

set predicate (connected salon kitchen)
set predicate (connected kitchen salon)

set predicate (connected corridor storage)
set predicate (connected storage corridor) 

set predicate (connected corridor small_bathroom)
